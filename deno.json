{
	"name": "@meower/api-client",
	"version": "1.0.0-rc.2",
	"exports": "./src/index.ts",
	"fmt": {
		"lineWidth": 80,
		"proseWrap": "always",
		"semiColons": true,
		"useTabs": true,
		"singleQuote": true
	},
	"lint": {
		"rules": {
			"include": [
				"ban-untagged-todo",
				"default-param-last",
				"eqeqeq",
				"no-eval",
				"triple-slash-reference",
				"verbatim-module-syntax"
			]
		},
		"exclude": [
			".github/**/*"
		]
	},
	"tasks": {
		"build-npm": "deno run -A .github/workflows/release.ts",
		"test": "deno test -A"
	},
	"test": {
		"include": [
			"tests/*"
		],
		"exclude": [
			"tests/internal/*.ts"
		]
	},
	"publish": {
		"include": [
			"src",
			"LICENSE",
			"README.md"
		]
	},
	"lock": false
}
